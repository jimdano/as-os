<?xml version="1.0" encoding="utf-8"?>
<com.dateslider.SliderContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dateSliderContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.dateslider.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="com.dateslider.labeler.YearLabeler"
        app:labelerFormat="%tY"
        app:childWidth="200dp"/>
    <com.dateslider.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="com.dateslider.labeler.WeekLabeler"
        app:labelerFormat="week %d"
        app:childWidth="100dp"/>
    <com.dateslider.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="com.dateslider.labeler.DayLabeler"
        app:labelerFormat="%tA"
        app:childWidth="150dp"/>
    <include layout="@layout/date_slider_dialogbuttons"/>
</com.dateslider.SliderContainer>
